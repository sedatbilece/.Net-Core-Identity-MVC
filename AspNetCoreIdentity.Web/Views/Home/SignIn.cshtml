
@{
    ViewData["Title"] = "SignIn";
}
@model SignInViewModel

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>Üye Girişi</h2>

         @if (TempData["SuccessMessage"]!=null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>

        <form asp-controller="Home" asp-action="SignIn" method="post"
        asp-route-returnUrl="@Context.Request.Query["returnUrl"]">
            <div class="mb-3">
                <label for="Email" class="form-label" asp-for="Email"></label>
                <input class="form-control" asp-for="Email" id="Email" type="email">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password"></label>
                <input class="form-control" asp-for="Password" id="Password" type="password">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <div class="mb-3 d-flex justify-content-between">
                <div class=" form-check">
                    <input class="form-check-input" asp-for="RememberMe">
                    <label class="form-check-label user-select-none" asp-for="RememberMe">Beni Hatırla</label>
                </div>
                <div>
                    <a class="btn btn-outline-secondary btn-sm" asp-controller="Home" asp-action="ForgetPassword"> Şifremi Unuttum</a>
                </div>
           </div>
            
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </form>
        <!-- Google ile Giriş Butonu -->
        <hr />
        <div class="text-center">
            <p class="text-muted">veya</p>
            <form asp-controller="Home" asp-action="ExternalLogin" method="post">
                <input type="hidden" name="provider" value="Google" />
                <input type="hidden" name="returnUrl" value="@Context.Request.Query["returnUrl"]" />
                <button type="submit" class="btn btn-google w-100">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48" class="me-2">
                        <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"/>
                        <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"/>
                        <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"/>
                        <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"/>
                    </svg>
                    Google ile Giriş Yap
                </button>
            </form>
        </div>
        
        <style>
            .btn-google {
                background-color: #ffffff;
                border: 1px solid #dadce0;
                color: #3c4043;
                font-weight: 500;
                font-size: 14px;
                padding: 10px 20px;
                border-radius: 4px;
                display: inline-flex;
                align-items: center;
                justify-content: center;
                transition: all 0.2s ease-in-out;
                box-shadow: 0 1px 2px 0 rgba(60,64,67,0.1);
            }
            .btn-google:hover {
                background-color: #f8f9fa;
                border-color: #dadce0;
                box-shadow: 0 1px 3px 1px rgba(60,64,67,0.15);
                color: #3c4043;
            }
            .btn-google:focus {
                outline: none;
                box-shadow: 0 0 0 3px rgba(66,133,244,0.25);
            }
            .btn-google:active {
                background-color: #f1f3f4;
            }
        </style>

        </div>
</div>
