
@{
    ViewData["Title"] = "PasswordChange";
}

@model PasswordChangeViewModel

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Şifre Yenileme</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-info" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>

        <form asp-asp-controller="Member" asp-action="PasswordChange" method="post">

            

            
            <div class="mb-3">
                <label for="PasswordOld" class="form-label" asp-for="PasswordOld"></label>
                <input class="form-control" asp-for="PasswordOld" id="PasswordOld" type="password">
                <span class="text-danger" asp-validation-for="PasswordOld"></span>
            </div>
           

            <div class="mb-3">
                <label for="PasswordNew" class="form-label" asp-for="PasswordNew"></label>
                <input class="form-control" asp-for="PasswordNew" id="PasswordNew" type="password">
                <span class="text-danger" asp-validation-for="PasswordNew"></span>
            </div>

            <div class="mb-3">
                <label for="PasswordNewConfirm" class="form-label" asp-for="PasswordNewConfirm"></label>
                <input class="form-control" asp-for="PasswordNewConfirm" id="PasswordNewConfirm" type="password">
                <span class="text-danger" asp-validation-for="PasswordNewConfirm"></span>
            </div>
            <div class="mb-3">

                <div class="col-md-8 offset-md-10">
                    <button type="submit" class="btn btn-primary">Şifre Değiştir</button>
                </div>
            </div>


        </form>

    </div>
</div>




