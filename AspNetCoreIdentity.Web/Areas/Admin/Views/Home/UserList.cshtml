
@{
    ViewData["Title"] = "UserList";
}
@model List<UserViewModel> 
<h1>Üye Listesi</h1>

<table class="table table-striped">
    
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Rol İşlemleri</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            
            <tr>
                <td>@item.UserId</td>
                <td>@item.UserName</td>
                <td>@item.UserEmail</td>
                <td><a asp-controller="Roles" asp-action="AssignToRole" asp-route-id="@item.UserId">Rol Ata</a></td>
            </tr>
        }
    </tbody>
</table>